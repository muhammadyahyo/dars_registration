<%- include('headers') %> 
    
<section class="d-flex justify-content-center align-items-center">
    <div class="container justify-content-center align-items-center flex-column">
        <h1>Sign Up page</h1>
        <% if(error) { %>
        <div class="alert alert-danger"><%= error %> </div>
        <% } %> 
        <form class="d-flex flex-column" action="/signup" method="POST">
            <label>
                <input type="text" class="form-control" name="login" placeholder="Login" required autocomplete="off">
            </label>

            <label>
                <input type="password" class="form-control" name="password" placeholder="Password" required autocomplete="off">
            </label>

            <button class="btn btn-success">Sign Up</button>
            <a class="btn btn-success mt-2" href="/login">Login Page</a>
        </form>

    </div>
</section>
    
<%- include('footer') %> 